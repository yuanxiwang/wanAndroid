/**index.wxss**/
.containter{
  background-color: #F2f2f2;
}
.scroll-view{
  width: 100%;
  height:100%;
  margin: 0;
  padding: 0;
}
.swiper{
  width: 100%;
  height: 300rpx;
  margin: 0;
  padding: 0;
}
.swiper-item-images{
  background: #3eff3f;
  width: 100%;
  height: 300rpx;
  margin: 0;
  padding: 0;
}
.viewContent{
  background: white;
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
}
.item-tag-author-time{
  display: flex;
  flex-direction: row;
  padding-left: 10rpx;
}
.item-tag{
  border: 0.5rpx solid red;
  border-radius: 10rpx;
  font-size: 20rpx;
  padding-left: 5rpx;
  padding-right: 5rpx;
  padding-bottom: 5rpx;
  margin-right: 10rpx;
  margin-left: 10rpx;
  display: flex;
  justify-content: center;
}
.item-author{
  background: white;
  font-size: 30rpx;
  display: inline;
  flex: 1;
  box-sizing: border-box;
}
.item-publish-time{
  font-size: 30rpx;
  display: inline;
  margin-right: 20rpx;
}
.item-content{
  width: 100%;
  display: flex;
  margin-top: 20rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
}
.divider{
  background: #999;
  margin-top: 20rpx;
  width: 100%;
  height: 1rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
}
.classify{
  font-size: 25rpx;
  margin-left: 10rpx;
  margin-top: 20rpx;
  color: #999;
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif
}
.iconCollect{
  width: 50rpx;
  height: 50rpx;
  display: flex;
  float: right;
  background: url();
}