/* pages/project/project.wxss */

.container {
    width: 100%;
    height: 100%;
    display: flex;
}

.item-parent {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 66;
    white-space: nowrap;
    height: 70rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
    background: red;
    padding-bottom: 10rpx;
}

.title-item {
    display: inline-block;
    height: 50rpx;
    color: white;
    margin-right: 20rpx;
    font-size: 26rpx;
}

.viewContent {
    background: white;
    width: 100%;
    display: flex;
    flex-direction: column;
}

.item-view {
    width: 100%;
    height: 350rpx;
    display: flex;
}

.img_left {
    width: 30%;
    height: 100%;
    margin-left: 20rpx;
}

.right-container {
    width: 70%;
    height: 100%;
    padding: 0 20rpx;
    float: right;
    display: flex;
    flex-direction: column;
}

.title-name {
    width: 100%;
    font-size: 30rpx;
    margin: 20 0rpx;
	flex: 1;
}

.proDesc {
    width: 100%;
    font-size: 20rpx;
    padding-right: 20rpx;
    padding-top: 20rpx;
    margin: 20 0 20 0rpx;
	flex: 5;
    color: #999;
}

.author-time {
    width: 100%;
    height: 100rpx;
    display: flex;
    flex-direction: row;
	flex: 1
}

.author {
    height: 100%;
    flex: 1;
    color: #999;
}

.time {
    height: 100%;
    float: right;
    align-items: right;
    color: #999;
}

.divider {
    background: #999;
    margin-top: 20rpx;
    width: 100%;
    height: 1rpx;
    padding-left: 10rpx;
    padding-right: 10rpx;
}
